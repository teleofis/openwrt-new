#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "teleofis,lt70", "mediatek,mt7621-soc";
	model = "TELEOFIS LT70";

	chosen {
		bootargs = "console=ttyS1,115200";
	};

	leds {
		compatible = "gpio-leds";
		act {
			label = "bottom:act";
			gpios = <&gpio 22 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		net {
			label = "middle:net";
			gpios = <&gpio 23 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		power {
			label = "top:power";
			gpios = <&gpio 24 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		wlan {
			label = "optional:wlan";
			gpios = <&gd3x 22 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys";
		intn {
			label = "intn";
			gpios = <&gpio 27 GPIO_ACTIVE_HIGH>;
			linux,code = <0x100>;
		};
		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	pps {
		compatible = "pps-gpio";
		gpios = <&gpio 30 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	watchdog {
		compatible = "linux,wdt-gpio";
		gpios = <&gpio 28 GPIO_ACTIVE_HIGH>;
		hw_algo = "toggle";
		hw_margin_ms = <200>;
		always-running;
	};

	reg_wlen: wlen {
		compatible = "regulator-fixed";
		regulator-name = "wlen";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		gpio = <&gpio 32 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-always-on;
	};
};

&i2c {
	status = "okay";

	ds3231: rtc@68 {
		compatible = "dallas,ds3231";
		reg = <0x68>;
	};
	gd3x: gd3x@11 {
		compatible = "sz,gd3x";
		reg = <0x11>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&sdhci {
	max-frequency = <40000000>;
	vdd-supply = <&reg_wlen>;
	no-1-8-v;
	pm-ignore-notify;
	keep-power-in-suspend;
	non-removable;
	status = "okay";
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;
		broken-flash-reset;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x50000 0x1fb0000>;
			};
		};
	};
};

&pcie {
	status = "okay";
};

&pcie0 {
	vdd-supply = <&reg_wlen>;
};

&pcie1 {
	vdd-supply = <&reg_wlen>;
};

&pcie2 {
	vdd-supply = <&reg_wlen>;
};

&ethernet {
	pinctrl-0 = <&mdio_pins>, <&rgmii1_pins>;
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan4";
		};

		port@1 {
			status = "okay";
			label = "lan3";
		};

		port@2 {
			status = "okay";
			label = "lan2";
		};

		port@3 {
			status = "okay";
			label = "wan";
		};

		port@4 {
			status = "okay";
			label = "lan1";
		};
	};
};

&uartlite {
	status = "okay";
	rts-gpios = <&gpio 31 GPIO_ACTIVE_HIGH>;
	rs485-rts-active-high;
};

&uartlite2 {
	status = "okay";
};

&uartlite3 {
	status = "okay";
	uart-has-rts-cts;
	rs485-rts-active-high;
};

&state_default {
	gpio {
		groups = "wdt", "rgmii2", "jtag";
		function = "gpio";
	};
};
